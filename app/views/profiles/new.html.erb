<section class="vh-100">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px">
            <div class="card-body p-md-5" style="background-color: #65c79a;">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                    Your Info
                  </p>
                  <%= form_with scope: :profile, url: profile_path, class: "mx-1 mx-md-4 ", data: {controller: 'profile', action: "turbo:submit-end->profile#validateForm" } do |f| %>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <div
                        data-mdb-input-init
                        class="form-outline flex-fill mb-0 full-name"
                      >
                      <%= f.text_field :full_name, class: "form-control full-name-field", id: "form3Example3c" %>
                      <%= f.label :full_name, "Your full name", class: "form-label", for: "form3Example3c" %>
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <div
                        data-mdb-input-init
                        class="form-outline flex-fill mb-0 bio"
                      >
                      <%= f.text_field :bio, class: "form-control bio-field", id: "form3Example4c" %>
                      <%= f.label :bio, "Your Bio", class: "form-label", for: "form3Example4c" %>
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <div
                        data-mdb-input-init
                        class="form-outline flex-fill mb-0 dob"
                      >
                      <%= f.date_field :dob, class: "form-control dob-field", id: "form3Example4cd" %>
                      <%= f.label :dob, "Date Of Birth", class: "form-label", for: "form3Example4cd" %>
                      </div>
                    </div>
  
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <%= f.submit "Setup my profile", class: "btn btn-dark btn-lg", data: { mdb_button_init: true, mdb_ripple_init: true } %>
                    </div>
                  <% end %>
                </div>
                <div
                  class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2"
                >
                  <img
                    src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                    class="img-fluid"
                    alt="Sample image"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  