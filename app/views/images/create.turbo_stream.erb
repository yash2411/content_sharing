<turbo-stream action="replace" target="image-form">
  <template>
    <turbo-frame id="image-form">
          <div class="container mt-4">
              <%= form_for(@image, class: "form image", local: true) do |f| %>
                <div class="mb-3 w-25 mx-auto title-field">
                  <%= f.label :caption, "Caption", class: "form-label visually-hidden" %>
                  <%= f.text_field :caption, class: "form-control title-input", placeholder: "Enter a caption for your image" %>
                </div>
          
                <div class="mb-3 w-25 mx-auto image-field">
                  <i class="fa-solid fa-images"></i>
                  <%= f.label :images, "Upload images", for: "formFileMultiple", class: "form-label" %>
                  <%= f.file_field :images, multiple: true, accept: "image/*", class: "form-control image-input", id: "formFileMultiple" %>
                  <small class="text-muted">Select multiple images (supported formats: JPG, PNG, GIF)</small>
                </div>
          
                <div class="mb-3 w-25 mx-auto">
                  <%= f.submit "Publish image", class: "btn btn-dark mx-auto" %>
                </div>
              <% end %>
            </div>
  </turbo-frame>
    
  </template>
</turbo-stream>
