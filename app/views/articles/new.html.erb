<div class="container mt-4">
    <%= form_for @article, class: "form article" do |f| %>
        <div class="mb-3 w-25">
          <%= f.label :title, "Title", class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="trix-content">
          <div class="mb-3">
            <%= f.label :description, "Description", class: "form-label" %>
            <%= f.rich_text_area :description, class: "form-control editor-size" %>    
          </div>
        </div>
        <%= f.submit "Publish article", class: "btn btn-dark" %>
    <% end %>
</div>

