<div class="container mt-4">
    <%= form_for @audio, class: "form",  data: {controller: 'audio-form', action: "turbo:submit-end->audio-form#audioFormValidate" } do |f| %>
        <div class="mb-3 w-25 mx-auto title-field">
            <%= f.label :title, "Title", class: "form-label" %>
            <%= f.text_field :title, class: "form-control title-input" %>
        </div>

        <div class="mb-3 w-25 mx-auto desc-field">
            <%= f.label :description, "Description", class: "form-label" %>
            <%= f.text_field :description, class: "form-control editor-size desc-input" %>    
        </div>

        <div class="mb-3 w-25 mx-auto audio-field">
            <%= f.label :audios, "Upload audios", for: "formFileMultiple", class: "form-label" %>
            <%= f.file_field :audios, multiple: true, class: "form-control audio-input", id: "formFileMultiple" %>
        </div>

        <div class="mb-3 w-25 mx-auto">
            <%= f.submit "Publish audio", class: "btn btn-dark mx-auto" %> 
        </div>

    <% end %>
</div>

